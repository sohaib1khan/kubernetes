pipeline {
    agent any

    environment {
        KUBECONFIG = '/path/to/your/kubeconfig' // Make sure this points to your kubeconfig file
    }

    stages {
        stage('Checkout') {
            steps {
                // Check out the latest code from the repo
                git branch: 'main', url: 'https://github.com/sohaib1khan/kubernetes_craft.git'
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                script {
                    // Run Skaffold to deploy to your k3s cluster
                    sh 'skaffold run -f Skaffold_Deployments/nginx_app_test/k8s/skaffold.yaml'
                }
            }
        }
    }

    post {
        success {
            echo 'Deployment successful!'
        }
        failure {
            echo 'Deployment failed.'
        }
    }
}
